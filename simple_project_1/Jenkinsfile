pipeline {
    agent any
    environment {
        DOCKER_HOST = 'tcp://15.206.167.109'
    }
    stages {
        stage('Git clone') {
            steps {
                 git 'https://github.com/dnyaneshvarsultane/Hello-world.git'
            }
        }
        stage('Maven Build') {
            steps {
                sh 'mvn clean package -DskipTests'
            }
        }
        stage('Build Docker') {
            steps {
                script {
                    def dockerImage = docker.build("docker_jar:${env.BUILD_NUMBER}", "--build-arg DOCKER_HOST=${env.DOCKER_HOST} .").inside("--privileged -v /var/run/docker.sock:/var/run/docker.sock") {
                        sh 'ls -la'
                    }
                }
            }
        }
        stage('Remove Unused Docker Image') {
            steps {
                sh "docker rmi my-image:${env.BUILD_NUMBER}"
            }
        }
    }
    post {
        always {
            cleanWs()
        }
        success {
            echo "Build is successful"
        }
        failure {
            echo "Build failed"
        }
    }
}
